<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="FloatingActionButtonsMenu">
        <attr name="switchButtonColorPressed" format="color" />
        <attr name="switchButtonColorNormal" format="color" />
        <attr name="switchButtonSize" format="enum">
            <enum name="normal" value="0" />
            <enum name="mini" value="1" />
            <enum name="auto" value="-1" />
        </attr>
        <attr name="switchButtonPlusIconColor" format="color" />
        <attr name="switchButtonCloseIcon" format="reference" />
        <attr name="fab_labelStyle" format="reference" />
        <attr name="fab_labelsGravity" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="fab_expandDirection" format="enum">
            <enum name="up" value="0" />
            <enum name="down" value="1" />
            <enum name="left" value="2" />
            <enum name="right" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SwitchCardView">
        <attr name="eventType" format="enum">
            <enum name="click" value="0" />
            <enum name="touch" value="1" />
        </attr>
        <attr name="eventClickViewId" format="reference" />
        <attr name="eventBackViewId" format="reference" />
    </declare-styleable>

</resources>
