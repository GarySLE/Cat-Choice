<?xml version="1.0" encoding="utf-8"?>
<com.ys.zy.catchoice.ui.widget.SwitchCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/choice_switcher"
    android:layout_width="77dp"
    android:layout_height="77dp"
    app:cardCornerRadius="39dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_choice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="39dp"
        app:cardBackgroundColor="@color/peach">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxWidth="50dp" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/bg_choice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</com.ys.zy.catchoice.ui.widget.SwitchCardView>
