<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.ys.zy.catchoice.model.Choice" />

        <import type="android.view.View" />

        <variable
            name="content"
            type="Choice" />
    </data>

    <com.ys.zy.catchoice.ui.widget.SwitchCardView
        android:id="@+id/choice_switcher"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp">

        <FrameLayout
            android:id="@+id/card_choice"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_circle_peach" />

            <TextView
                android:id="@+id/title"
                style="@style/LargeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="2"
                android:maxWidth="100dp"
                android:text="@{content.title}"
                android:visibility="@{content.noTitle ? View.GONE : View.VISIBLE}" />

        </FrameLayout>

        <ImageView
            android:id="@+id/bg_choice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circle_peach"
            android:src="@mipmap/ic_pets_white_18dp" />

    </com.ys.zy.catchoice.ui.widget.SwitchCardView>
</layout>
